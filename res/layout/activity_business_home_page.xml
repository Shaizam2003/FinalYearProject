<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/menubackground">

    <!-- Title TextView -->
    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Halal Check"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:layout_alignParentTop="true"/>

    <!-- Button Container -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <!-- View Restaurant Menu Button -->
        <Button
            android:id="@+id/viewMenuButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Restaurant Menu"
            android:textSize="18sp"
            android:background="@color/purple"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Add Restaurant Menu Items Button -->
        <Button
            android:id="@+id/updateMenuButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Restaurant Menu Items"
            android:textSize="18sp"
            android:background="@color/purple"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- View Customer Orders Button -->
        <Button
            android:id="@+id/viewOrdersButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Customer Orders"
            android:textSize="18sp"
            android:background="@color/purple"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Customer Reviews Button -->
        <Button
            android:id="@+id/viewReviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Reviews"
            android:textSize="18sp"
            android:background="@color/purple"
            android:textColor="@android:color/white"
            android:padding="16dp"
            android:layout_marginBottom="16dp" />

        <!-- View Orders Delivered Button -->
        <Button
            android:id="@+id/viewOrdersDelivered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Orders Delivered"
            android:textSize="18sp"
            android:background="@color/purple"
            android:textColor="@android:color/white"
            android:padding="16dp" />
    </LinearLayout>

</RelativeLayout>
