<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtOrderDetailsHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Details"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- Order details section -->
    <TextView
        android:id="@+id/txtOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Details"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txtCurrentStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Status: "
        android:textSize="16sp"
        android:layout_marginTop="8dp"/>

    <Button
        android:id="@+id/btnUpdateStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Status"
        android:layout_marginTop="16dp" />

    <!-- Buttons Container -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <!-- Button to send messages -->
        <Button
            android:id="@+id/btnSendMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send message to customer"
            android:layout_marginEnd="8dp" />

        <!-- Button to view messages -->
        <Button
            android:id="@+id/btnViewMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Messages" />

    </LinearLayout>

    <!-- Button to update status -->


</LinearLayout>
