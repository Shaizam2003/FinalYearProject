<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewHeading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We have received your order. You can track the status of your order below!"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"/>

        <!-- Customer Email -->
        <TextView
            android:id="@+id/textViewCustomerEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Customer Email:"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/textViewHeading"
            android:layout_marginBottom="8dp"/>

        <!-- Total Amount -->
        <TextView
            android:id="@+id/textViewTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Amount:"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/textViewCustomerEmail"
            android:layout_marginBottom="8dp"/>

        <!-- Order Items -->
        <TextView
            android:id="@+id/textViewOrderItems"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Items:"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/textViewTotalAmount"
            android:layout_marginBottom="16dp"/>

        <!-- Order Statuses -->
        <TextView
            android:id="@+id/textViewPreparation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preparation"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/textViewOrderItems"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewQualityCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quality Check"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/textViewPreparation"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewOutForDelivery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Out for Delivery"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/textViewQualityCheck"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/textViewDelivered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivered"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:layout_below="@id/textViewOutForDelivery"
            android:layout_marginBottom="16dp"/>

        <!-- Review Restaurant Button -->
        <Button
            android:id="@+id/buttonReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review Restaurant"
            android:layout_below="@id/textViewDelivered"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:textColor="@color/white"
            android:backgroundTint="@color/purple"/>

    </RelativeLayout>
</ScrollView>
