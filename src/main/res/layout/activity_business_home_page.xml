<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menubackground"
    tools:context=".BusinessHomePage">

    <TextView
        android:id="@+id/welcomeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Welcome to Halal Check"
        android:textSize="20dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/viewMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="View Restaurant Menu" />

    <Button
        android:id="@+id/updateMenuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewMenuButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Add Restaurant Menu Items" />

    <Button
        android:id="@+id/viewOrdersButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/updateMenuButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="View Customer Orders" />

</RelativeLayout>
