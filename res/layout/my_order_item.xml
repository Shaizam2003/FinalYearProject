<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/txtOrderDetailsHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Details"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp" />

    <!-- Order details section -->
    <TextView
        android:id="@+id/txtOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order Details"
        android:textSize="16sp" />

    <!-- Section for expanded options -->
    <LinearLayout
        android:id="@+id/llOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/btnSendMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Message to Driver" />

        <Button
            android:id="@+id/btnViewMessages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Messages from Driver"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <!-- Review Restaurant Button -->
    <Button
        android:id="@+id/btnReviewRestaurant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Review Restaurant"
        android:visibility="gone" />

    <!-- Optional: Add a button to toggle the visibility of the expanded section -->
    <!--
    <Button
        android:id="@+id/btnToggleOptions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show Options"
        android:layout_marginTop="8dp"/>
    -->
</LinearLayout>
